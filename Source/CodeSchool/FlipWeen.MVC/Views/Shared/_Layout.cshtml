    <div id="wrapper">
        <header id="header">
            <div class="wrap-top-menu">
                <div class="container_12 clearfix">
                    <div class="grid_12">
                        <nav class="top-menu">
                            <ul id="main-menu" class="nav nav-horizontal clearfix">
                                <li class="active"><a href="/">Home</a></li>
                                <li class="sep"></li>
                                <li><a href="/Home/HowItWorks">How it Works</a></li>
                                <li class="sep"></li>
                                <li><a href="/">Contact</a></li>
                            </ul>
                            <a id="btn-toogle-menu" class="btn-toogle-menu" href="#alternate-menu">
                                <span class="line-bar"></span>
                                <span class="line-bar"></span>
                                <span class="line-bar"></span>
                            </a>
                            <div id="right-menu">
                                <ul class="alternate-menu">
                                    <li><a href="/">Home</a></li>
                                    <li><a href="/Home/HowItWorks">How it Works</a></li>
                                    <li><a href="/">Contact us</a></li>
                                </ul>
                            </div>
                        </nav>

                        <i id="sys_btn_toggle_search" class="icon iBtnPurple make-right"></i>
                    </div>
                </div>
            </div><!-- end: .wrap-top-menu -->
            <div class="container_12 clearfix">
                <div class="grid_12 header-content">
                    <div id="sys_header_right" class="header-right">
                        <div class="account-panel">
                            @*<a> @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-purple sys_show_popup_login" })</a>*@
                          
                            <a href="/Account/Register" class="btn btn-purple">Register</a>
                            <a>@*@Html.ActionLink("Login", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-black sys_show_popup_login" })*@</a>
                            <a href="/Account/Login" class="btn btn-black">Login</a>
                        </div>

                        <div class="form-search">
                            @using (Html.BeginForm("Search", "Projects", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.TextBox("projectName", string.Empty, new { @class = "txt-keyword", name = "projectName", placeholder = "Search projects" })

                                <button class="btn btn-search" type="submit"><i class="icon iMagnifier"></i></button>
                                <button class="btn btn-reset-keyword" type="reset"><i class="icon iXHover"></i></button>
                            }
                        </div>
                    </div>
                    <div class="header-left">
                        <h1 id="logo">
                            @Html.ActionLink(" ", "Index", "Home", new { area = "" }, new { @class = "headerLogo" })
                        </h1>
                        <div class="main-nav clearfix">
                            <div class="nav-item">
                                <a>@Html.ActionLink("Explore", "Explore", "Projects", new { area = "" }, new { @class = "start-a-project_link" })</a>
                                @*<a href="/Projects/Explore" class="nav-title">Explore</a>*@
                                <p class="rs nav-description">Great Projects</p>
                            </div>
                            <span class="sep"></span>
                            <div class="nav-item">
                                <a>@Html.ActionLink("Start", "ProjectCreation", "Projects", new { area = "" }, new { @class = "start-a-project_link" })</a>
                                @*<a href="#" class="nav-title">Start</a>*@
                                <p class="rs nav-description">Your Project</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>


@model FlipWeen.MVC.Models.ProjectViewModel
<div class="project-short larger">
    <div class="top-project-info">
        <div class="content-info-short clearfix">
            <a href="#" class="thumb-img">
                <img src="@Url.Content(Model.Image)">
            </a>
            <div class="wrap-short-detail">
                <h3 class="rs acticle-title"><a class="be-fc-orange" href="#">@Html.DisplayTextFor(model => model.Name)</a></h3>
                <p class="rs tiny-desc">by <a href="#" class="fw-b fc-gray be-fc-orange">@Html.DisplayTextFor(model => model.User.FullName)</a></p>
                <p class="rs title-description">@Html.DisplayTextFor(model => model.Description)</p>

            </div>
         
        </div>
    </div><!--end: .top-project-info -->
    <div class="bottom-project-info clearfix">
        <div class="project-progress sys_circle_progress" data-percent="@Html.DisplayTextFor(model => model.ProgressPercent)">
            <div class="sys_holder_sector"></div>
        </div>
        <div class="group-fee clearfix">
            <div class="fee-item">
                <p class="rs lbl">Backers</p>
                <span class="val">@Html.DisplayTextFor(model => model.BackersNo)</span>
            </div>
            <div class="sep"></div>
            <div class="fee-item">
                <p class="rs lbl">Pledged</p>
                <span class="val">@Html.DisplayTextFor(model => model.CurrentAmount)</span>
            </div>
            <div class="sep"></div>
            <div class="fee-item">
                <p class="rs lbl">Days Left</p>
                <span class="val">@Html.DisplayTextFor(model => model.DaysLeft)</span>
            </div>
        </div>
        
        <a>@Html.ActionLink("Back this project", "Back", "Projects", routeValues: null, htmlAttributes: new {  @class = "btn btn-purple btn-buck-project" }) </a>
        <div class="clear"></div>
    </div>
</div><!--end: project-short item -->

<div class="layout-2cols">
    <div class="content grid_9">
        <div class="search-result-page">
            <div class="top-lbl-val">
                <h3 class="common-title">Explore / <span class="fc-orange">@Html.DisplayTextFor(model => model.ProjectCategory.Name)</span></h3>
                <div class="count-result">
                    <span class="fw-b fc-black">@Html.DisplayTextFor(model => model.ProjectCategory.ProjectCount)</span> projects found in this category
                </div>
            </div>

@model FlipWeen.MVC.Models.ProjectViewModel

@{
    ViewBag.Title = "";
}

<div class="layout-2cols">
    <div class="content grid_8">
        <div class="project-detail">
            <h2 class="rs project-title">@Html.DisplayTextFor(model => model.Name)</h2>
            <p class="rs post-by">by <a href="#">Jonh Doe</a></p>
            <div class="project-short big-thumb">
                <div class="top-project-info">
                    <div class="content-info-short clearfix">
                        <div class="thumb-img">
                            <div class="rslides_container">
                                <ul class="rslides" id="slider1">
                                    <li><img src="@Url.Content(Model.Image)" alt=""></li>
                                </ul>
                            </div>
                        </div>
                        <video src="@Url.Content(Model.Video)"></video>
                    </div>
                </div><!--end: .top-project-info -->
                <div class="bottom-project-info clearfix">
                    <div class="project-progress sys_circle_progress" data-percent="@Html.DisplayTextFor(model=>model.ProgressPercent)">
                        <div class="sys_holder_sector"></div>
                    </div>
                    <div class="group-fee clearfix">
                        <div class="fee-item">
                            <p class="rs lbl">Backers</p>
                            <span class="val">@Html.DisplayTextFor(model => model.BackersNo)</span>
                        </div>
                        <div class="sep"></div>
                        <div class="fee-item">
                            <p class="rs lbl">Pledged</p>
                            <span class="val">@Html.DisplayTextFor(model => model.CurrentAmount)</span>
                        </div>
                        <div class="sep"></div>
                        <div class="fee-item">
                            <p class="rs lbl">Days Left</p>
                            <span class="val">@Html.DisplayTextFor(model => model.DaysLeft)</span>
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
            <div class="project-tab-detail tabbable accordion">
                <ul class="nav nav-tabs clearfix">
                    <li class="active"><a href="#">About</a></li>

                    <li><a href="#" class="be-fc-orange">Backers (@Html.DisplayTextFor(model => model.BackersNo))</a></li>

                </ul>
                <div class="tab-content">
                    <div>
                        <h3 class="rs alternate-tab accordion-label">About</h3>
                        <div class="tab-pane active accordion-content">
                            <div class="editor-content">
                                <h3 class="rs title-inside">"@Html.DisplayTextFor(model => model.Name)</h3>
                                <p class="rs post-by">by <a href="#" class="fw-b fc-gray be-fc-orange">@Html.DisplayTextFor(model => model.User.FullName)</a>
                                <p>@Html.DisplayTextFor(model => model.Description)</p>

                                <div class="social-sharing">
                                    <!-- AddThis Button BEGIN -->
                                    <div class="addthis_toolbox addthis_default_style">
                                        <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
                                        <a class="addthis_button_tweet"></a>
                                        <a class="addthis_button_google_plusone" g:plusone:size="medium"></a>

                                    </div>

                                    <!-- AddThis Button END -->
                                </div>
                            </div>
                            <div class="project-btn-action">
                                <a class="btn big btn-purple" href="#">Ask a question</a>
                                <a class="btn big btn-black" href="#">Report this project</a>
                            </div>
                        </div><!--end: .tab-pane(About) -->
                    </div>
                    <div>
                        <h3 class="rs alternate-tab accordion-label"></h3>
                        <div class="tab-pane accordion-content">
                            <div class="tab-pane-inside">
                                <div class="project-author pb20">
                                    <div class="media">
                                        @*<a href="#" class="thumb-left">
                                            <img src="images/ex/th-90x90-1.jpg" />
                                        </a>*@
                                        <div class="media-body">
                                            <h4 class="rs pb10"><a href="#" class="be-fc-orange fw-b">@Html.DisplayTextFor(model => model.User.FullName)</a></h4>
                                       
                                        </div>
                                    </div>
                                </div><!--end: .project-author -->

                            </div>
                            <div class="project-btn-action">
                                <a class="btn btn-purple" href="#">Ask a question</a>
                                <a class="btn btn-black" href="#">Report this project</a>
                            </div>
                        </div><!--end: .tab-pane(Backers) -->
                    </div>
                </div>
            </div><!--end: .project-tab-detail -->
        </div>
    </div><!--end: .content -->
    <div class="sidebar grid_4">
        <div class="project-runtime">
            <div class="box-gray">
                <div class="project-date clearfix">
                    <i class="icon iCalendar"></i>
                    <span class="val"><span class="fw-b">Launched: </span>@Html.DisplayTextFor(model => model.CreationDate)</span>
                </div>
                <div class="project-date clearfix">
                    <i class="icon iClock"></i>
                    <span class="val"><span class="fw-b">Funding ends: </span>@Html.DisplayTextFor(model => model.EndDate)</span>
                </div>

                <a>
                    @Html.ActionLink("Back this project", "Back", "Projects", routeValues: new {projectId =Model.Id   }, htmlAttributes: new { @class = "btn btn-green btn-buck-project" })
                    <span class="lbl">Back This Project</span>
                    <span class="desc">$1 minimum pledge</span>
                
                </a>
                <p class="rs description">This project will only be funded if at least @Html.DisplayTextFor(model => model.TargetAmount) is pledged by @Html.DisplayTextFor(model => model.EndDate).</p>
            </div>
        </div><!--end: .project-runtime -->
        <div class="project-author">
            <div class="box-gray">
                <h3 class="title-box">Project by</h3>
                <div class="media">
                    @*<a href="#" class="thumb-left">
                        <img src="images/ex/th-90x90-1.jpg" />
                    </a>*@
                    <div class="media-body">
                        <h4 class="rs pb10"><a href="#" class="be-fc-orange fw-b">@Html.DisplayTextFor(model => model.User.FullName)</a></h4>
                  
                    </div>
                </div>
                <div class="author-action">
                    <a class="btn btn-purple" href="#">Contact me</a>
                    <a class="btn btn-white" href="#">See full bio</a>
                </div>
            </div>
        </div><!--end: .project-author -->
        @Html.Partial("_PackagesPartial", Model.Packages)
        <p>
            @Html.ActionLink("Edit", "Edit", new
   {@* id = Model.Id *@}) |
            @Html.ActionLink("Back to List", "Index")
        </p>
